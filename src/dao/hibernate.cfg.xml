<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/saudeecia?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping class="modelos.Alergia"/>
    <mapping class="modelos.Cirurgia"/>
    <mapping class="modelos.Consulta"/>
    <mapping class="modelos.DadosAdPaciente"/>
    <mapping class="modelos.Email"/>
    <mapping class="modelos.Medico"/>
    <mapping class="modelos.Mensagem"/>
    <mapping class="modelos.Paciente"/>
    <mapping class="modelos.Pessoa"/>
    <mapping class="modelos.Prontuario"/>
    <mapping class="modelos.Secretaria"/>
    <mapping class="modelos.Sms"/>
  </session-factory>
</hibernate-configuration>
